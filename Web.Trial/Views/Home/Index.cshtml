@model Entity.Anonymous.UserModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <link rel="stylesheet" href="style.css">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/FrontEndCss/UserProfileStyle.css'>

</head>
<body class="body1">
    <!-- partial:index.partial.html -->
    @{
        var toUser = ViewData.Model;
    }
    <h2>Hi, I am @toUser.User_Name </h2>
    <div class="warpper">
        <input class="radio" id="one" name="group" type="radio" checked>
        <input class="radio" id="two" name="group" type="radio">
        <input class="radio" id="three" name="group" type="radio">
        <div class="tabs">
            <label class="tab" id="one-tab" for="one">Send Message</label>
            <label class="tab" id="two-tab" for="two">More option</label>
        </div>
        <div class="panels">
            <div class="panel" id="one-panel">
                <div class="container">
                    <div class="panel-title">Leave a Message or truth</div>
                    <form action="~/Home/Index" method="POST">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="6" style="resize: none;" name="msg"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block mb-2">Send Message</button>
                    </form>
                </div>
            </div>
            <div class="panel" id="two-panel">
                <div class="panel-title">We have something for you</div>
                @{
                    string Accounturl = "https://localhost:44367/Auth/Login";
                    <p><b><a href="@Accounturl">Create your account by clicking here</a></b></p><br />
                }
            </div>
        </div>
    </div>
    <!-- partial -->

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js'></script>

</body>
</html>
